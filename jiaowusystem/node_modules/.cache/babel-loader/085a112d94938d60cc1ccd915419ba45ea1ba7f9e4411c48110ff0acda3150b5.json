{"ast":null,"code":"export default {\n  data() {\n    return {\n      user_id: \"\",\n      user_account: \"\",\n      cla_id: 0,\n      cou_name: \"\",\n      member_count: 0,\n      dialogVisible: false,\n      currentRemark: \"\",\n      selectedRow: null,\n      // 用于存储选中的行数据\n      tableData: [{\n        stu_id: '2021001',\n        stu_name: '学生1',\n        sco_item_1: 80,\n        sco_item_2: 85,\n        sco_item_3: 90,\n        sco_item_4: 75,\n        sco_note: '备注1'\n      }, {\n        stu_id: '2021002',\n        stu_name: '学生2',\n        sco_item_1: 88,\n        sco_item_2: 82,\n        sco_item_3: 85,\n        sco_item_4: 92,\n        sco_note: '备注2'\n      }, {\n        stu_id: '2021003',\n        stu_name: '学生3',\n        sco_item_1: 79,\n        sco_item_2: 90,\n        sco_item_3: 88,\n        sco_item_4: 85,\n        sco_note: '备注3'\n      }]\n    };\n  },\n  methods: {\n    goToTeacherHome() {\n      this.$router.go(-1);\n    },\n    openRemarkDialog(row) {\n      this.selectedRow = row; // 保存当前行数据\n      this.currentRemark = row.sco_note; // 设置备注内容为当前行的备注\n      this.dialogVisible = true; // 打开弹窗\n    },\n    saveRemark() {\n      if (this.selectedRow) {\n        this.selectedRow.sco_note = this.currentRemark; // 保存备注到选中行\n      }\n      this.dialogVisible = false; // 关闭弹窗\n    },\n    resetRemark() {\n      this.currentRemark = ''; // 重置备注\n      this.selectedRow = null; // 清空选中行\n    }\n  }\n};","map":{"version":3,"names":["data","user_id","user_account","cla_id","cou_name","member_count","dialogVisible","currentRemark","selectedRow","tableData","stu_id","stu_name","sco_item_1","sco_item_2","sco_item_3","sco_item_4","sco_note","methods","goToTeacherHome","$router","go","openRemarkDialog","row","saveRemark","resetRemark"],"sources":["D:\\vue_project\\test_project\\jiaowusystem\\src\\views\\main\\tch_specific_grade.vue"],"sourcesContent":["<!--个人信息（老师，学生，教务）-->\r\n<template>\r\n    <div class=\"specific_grade\">\r\n      <el-container>\r\n        <el-header>\r\n          <img src=\"@/assets/2.jpg\" alt=\"Icon\" class=\"badge\">\r\n          <h3 style=\"margin-right: auto;\">某某学校教师端——我的评分页面</h3>\r\n          <div class=\"user-info\">\r\n            <h3>账号：{{ user_account }}</h3>\r\n            <h3>ID: {{ user_id }}</h3>\r\n          </div>\r\n          <el-button type=\"danger\" style=\"float: right;\" @click=\"goToTeacherHome\">返回</el-button>\r\n        </el-header>\r\n  \r\n        <el-main>\r\n          <div class=\"lab\">\r\n            <h3>教学班号：{{ cla_id }}</h3>\r\n            <h3>课程名：{{ cou_name }}</h3>\r\n            <h3>班级人数：{{ member_count }}</h3>\r\n          </div>\r\n  \r\n          <el-table :data=\"tableData\" height=\"350\" style=\"width: 100%\" border size=\"large\">\r\n            <el-table-column prop=\"stu_id\" label=\"学号\" width=\"150px\"></el-table-column>\r\n            <el-table-column prop=\"stu_name\" label=\"姓名\" width=\"150px\"></el-table-column>\r\n            <el-table-column prop=\"sco_item_1\" label=\"评分项1\" width=\"150px\"></el-table-column>\r\n            <el-table-column prop=\"sco_item_2\" label=\"评分项2\" width=\"150px\"></el-table-column>\r\n            <el-table-column prop=\"sco_item_3\" label=\"评分项3\" width=\"150px\"></el-table-column>\r\n            <el-table-column prop=\"sco_item_4\" label=\"评分项4\" width=\"150px\"></el-table-column>\r\n            <el-table-column label=\"备注\">\r\n              <template v-slot=\"scope\">\r\n                <el-button @click=\"openRemarkDialog(scope.row)\" type=\"text\">编辑</el-button>\r\n                <span>{{ scope.row.sco_note }}</span>\r\n              </template>\r\n            </el-table-column>\r\n          </el-table>\r\n        </el-main>\r\n  \r\n        <!-- 备注编辑对话框 -->\r\n        <el-dialog\r\n          title=\"编辑备注\"\r\n          v-model:visible=\"dialogVisible\"\r\n          width=\"400px\"\r\n          @close=\"resetRemark\">\r\n          <el-input\r\n            type=\"textarea\"\r\n            v-model=\"currentRemark\"\r\n            placeholder=\"请输入备注内容\"\r\n            rows=\"4\">\r\n          </el-input>\r\n  \r\n          <!-- 使用 v-slot 语法来定义 footer 插槽 -->\r\n          <template v-slot:footer>\r\n            <el-button @click=\"dialogVisible = false\">取消</el-button>\r\n            <el-button type=\"primary\" @click=\"saveRemark\">保存</el-button>\r\n          </template>\r\n        </el-dialog>\r\n      </el-container>\r\n    </div>\r\n  </template>\r\n  \r\n  <script>\r\n  export default {\r\n    data() {\r\n      return {\r\n        user_id: \"\",\r\n        user_account: \"\",\r\n        cla_id: 0,\r\n        cou_name: \"\",\r\n        member_count: 0,\r\n        dialogVisible: false,\r\n        currentRemark: \"\",\r\n        selectedRow: null, // 用于存储选中的行数据\r\n        tableData: [\r\n          { stu_id: '2021001', stu_name: '学生1', sco_item_1: 80, sco_item_2: 85, sco_item_3: 90, sco_item_4: 75, sco_note: '备注1' },\r\n          { stu_id: '2021002', stu_name: '学生2', sco_item_1: 88, sco_item_2: 82, sco_item_3: 85, sco_item_4: 92, sco_note: '备注2' },\r\n          { stu_id: '2021003', stu_name: '学生3', sco_item_1: 79, sco_item_2: 90, sco_item_3: 88, sco_item_4: 85, sco_note: '备注3' },\r\n        ]\r\n      };\r\n    },\r\n    methods: {\r\n      goToTeacherHome() {\r\n        this.$router.go(-1);\r\n      },\r\n      openRemarkDialog(row) {\r\n        this.selectedRow = row; // 保存当前行数据\r\n        this.currentRemark = row.sco_note; // 设置备注内容为当前行的备注\r\n        this.dialogVisible = true; // 打开弹窗\r\n      },\r\n      saveRemark() {\r\n        if (this.selectedRow) {\r\n          this.selectedRow.sco_note = this.currentRemark; // 保存备注到选中行\r\n        }\r\n        this.dialogVisible = false; // 关闭弹窗\r\n      },\r\n      resetRemark() {\r\n        this.currentRemark = ''; // 重置备注\r\n        this.selectedRow = null; // 清空选中行\r\n      }\r\n    }\r\n  };\r\n  </script>\r\n\r\n<style lang='stylus' scoped>\r\nhtml, body {  \r\n  height: 100%; /* 设置html和body的高度为100% */  \r\n  margin: 0; /* 去掉默认的margin */  \r\n  overflow: hidden; /* 隐藏body的滚动条 */  \r\n}  \r\n\r\n.el-container {  \r\n  display: flex;  \r\n  flex-direction: column;  \r\n  height: 100%; /* 设置容器高度为100% */  \r\n}  \r\n\r\n.el-header {  \r\n  position: fixed;  \r\n  top: 0;  \r\n  left: 0;  \r\n  right: 0;  \r\n  background-color: var(--el-color-primary-light-3);  \r\n  color: black;  \r\n  height: 12%;   \r\n  z-index: 1000;  \r\n  display: flex;  \r\n  align-items: center;  \r\n  justify-content: space-between;  \r\n  padding: 0 20px;  \r\n}  \r\n.specific_grade {  \r\n  height: 100%;  \r\n  overflow-y: auto; /* 允许垂直滚动 */  \r\n} \r\n.badge {  \r\n  width: 85px;  \r\n  height: 85px;  \r\n  margin-left: 0;  \r\n  margin-right: 10px;  \r\n  border-radius: 50%;  \r\n}  \r\n\r\n.user-info {  \r\n  margin-left: 20px;   \r\n  margin-right: 50px;   \r\n}  \r\n.lab{\r\n    display: flex;\r\n    gap: 350px;\r\n    justify-content: center;  /* 垂直居中对齐 */\r\n    align-items: center;\r\n    margin-top: 50px;\r\n    font-size: 20px;\r\n}\r\n.el-table th {\r\n  font-weight: bold;  /* 设置表头字体加粗 */\r\n}\r\n</style>"],"mappings":"AA6DE,eAAe;EACbA,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,OAAO,EAAE,EAAE;MACXC,YAAY,EAAE,EAAE;MAChBC,MAAM,EAAE,CAAC;MACTC,QAAQ,EAAE,EAAE;MACZC,YAAY,EAAE,CAAC;MACfC,aAAa,EAAE,KAAK;MACpBC,aAAa,EAAE,EAAE;MACjBC,WAAW,EAAE,IAAI;MAAE;MACnBC,SAAS,EAAE,CACT;QAAEC,MAAM,EAAE,SAAS;QAAEC,QAAQ,EAAE,KAAK;QAAEC,UAAU,EAAE,EAAE;QAAEC,UAAU,EAAE,EAAE;QAAEC,UAAU,EAAE,EAAE;QAAEC,UAAU,EAAE,EAAE;QAAEC,QAAQ,EAAE;MAAM,CAAC,EACvH;QAAEN,MAAM,EAAE,SAAS;QAAEC,QAAQ,EAAE,KAAK;QAAEC,UAAU,EAAE,EAAE;QAAEC,UAAU,EAAE,EAAE;QAAEC,UAAU,EAAE,EAAE;QAAEC,UAAU,EAAE,EAAE;QAAEC,QAAQ,EAAE;MAAM,CAAC,EACvH;QAAEN,MAAM,EAAE,SAAS;QAAEC,QAAQ,EAAE,KAAK;QAAEC,UAAU,EAAE,EAAE;QAAEC,UAAU,EAAE,EAAE;QAAEC,UAAU,EAAE,EAAE;QAAEC,UAAU,EAAE,EAAE;QAAEC,QAAQ,EAAE;MAAM,CAAC;IAE3H,CAAC;EACH,CAAC;EACDC,OAAO,EAAE;IACPC,eAAeA,CAAA,EAAG;MAChB,IAAI,CAACC,OAAO,CAACC,EAAE,CAAC,CAAC,CAAC,CAAC;IACrB,CAAC;IACDC,gBAAgBA,CAACC,GAAG,EAAE;MACpB,IAAI,CAACd,WAAU,GAAIc,GAAG,EAAE